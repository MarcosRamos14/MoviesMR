<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mrDarkGrey"
    tools:context=".presentation.detail.DetailFragment">

    <ImageView
        android:id="@+id/image_movies"
        android:layout_width="@dimen/match_constraints"
        android:layout_height="@dimen/_270dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <View
        android:layout_width="@dimen/match_constraints"
        android:layout_height="@dimen/match_constraints"
        android:background="@drawable/ic_image_gradent"
        app:layout_constraintBottom_toBottomOf="@+id/image_movies"
        app:layout_constraintEnd_toEndOf="@+id/image_movies"
        app:layout_constraintStart_toStartOf="@+id/image_movies"
        app:layout_constraintTop_toTopOf="@+id/image_movies" />

    <TextView
        android:id="@+id/text_detail"
        style="@style/TextAppearance.MaterialComponents.Headline6"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_46dp"
        android:layout_marginStart="@dimen/_12dp"
        android:layout_marginTop="@dimen/_12dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/white"
        android:textSize="@dimen/_16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_movies"
        tools:text="@string/app_name_movies" />

    <TextView
        android:id="@+id/number_like_detail"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_16dp"
        android:layout_marginStart="@dimen/_12dp"
        android:layout_marginTop="@dimen/_8dp"
        android:textColor="@color/white"
        android:textSize="@dimen/_10sp"
        app:drawableStartCompat="@drawable/ic_like"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_detail"
        tools:text="@string/app_like_movies" />

    <TextView
        android:id="@+id/popularity_detail"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_16dp"
        android:layout_marginStart="@dimen/_24dp"
        android:layout_marginTop="@dimen/_8dp"
        android:textColor="@color/white"
        android:textSize="@dimen/_10sp"
        app:drawableStartCompat="@drawable/ic_star"
        app:layout_constraintStart_toEndOf="@id/number_like_detail"
        app:layout_constraintTop_toBottomOf="@id/text_detail"
        tools:text="@string/app_popularity_movies" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="@dimen/match_constraints"
        android:layout_marginTop="@dimen/_12dp"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/number_like_detail"
        tools:listitem="@layout/item_movies_detail"/>

</androidx.constraintlayout.widget.ConstraintLayout>
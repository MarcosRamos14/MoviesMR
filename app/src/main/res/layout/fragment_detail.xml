<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mrDarkGrey"
    tools:context=".presentation.detail.DetailFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/mrDarkGrey"
            app:contentScrim="@color/mrDarkGrey"
            app:layout_scrollFlags="scroll|enterAlwaysCollapsed">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_collapseMode="parallax">

                <ImageView
                    android:id="@+id/image_movies"
                    android:layout_width="@dimen/match_constraints"
                    android:layout_height="@dimen/match_constraints"
                    android:contentDescription="@null"
                    android:scaleType="centerCrop"
                    app:layout_constraintDimensionRatio="H, 2:2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:src="@tools:sample/avatars" />

                <View
                    android:id="@+id/view"
                    android:layout_width="@dimen/match_constraints"
                    android:layout_height="@dimen/match_constraints"
                    android:background="@drawable/ic_image_gradient"
                    app:layout_constraintBottom_toBottomOf="@id/image_movies"
                    app:layout_constraintEnd_toEndOf="@id/image_movies"
                    app:layout_constraintStart_toStartOf="@id/image_movies"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.appbar.CollapsingToolbarLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/mrDarkGrey"
            app:layout_collapseMode="pin">

            <TextView
                android:id="@+id/text_detail_title"
                style="@style/TextAppearance.MaterialComponents.Headline6"
                android:layout_width="@dimen/match_constraints"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_16dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/white"
                android:textSize="@dimen/_16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@string/app_name_movies" />

            <TextView
                android:id="@+id/number_like_detail"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_16dp"
                android:layout_marginVertical="@dimen/_8dp"
                android:drawablePadding="@dimen/_8dp"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sp"
                app:drawableStartCompat="@drawable/ic_like"
                app:layout_constraintStart_toStartOf="@id/text_detail_title"
                app:layout_constraintTop_toBottomOf="@id/text_detail_title" />

            <TextView
                android:id="@+id/text_like"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_16dp"
                android:layout_marginHorizontal="@dimen/_8dp"
                android:layout_marginVertical="@dimen/_8dp"
                android:text="@string/app_like_movies"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sp"
                app:layout_constraintStart_toEndOf="@id/number_like_detail"
                app:layout_constraintTop_toBottomOf="@id/text_detail_title" />

            <TextView
                android:id="@+id/number_popularity_detail"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_16dp"
                android:layout_marginStart="@dimen/_16dp"
                android:drawablePadding="@dimen/_8dp"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sp"
                app:drawableStartCompat="@drawable/ic_star"
                app:layout_constraintStart_toEndOf="@id/text_like"
                app:layout_constraintTop_toTopOf="@id/number_like_detail" />

            <TextView
                android:id="@+id/text_popularity"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_16dp"
                android:layout_marginHorizontal="@dimen/_8dp"
                android:layout_marginVertical="@dimen/_8dp"
                android:text="@string/app_popularity_movies"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sp"
                app:layout_constraintStart_toEndOf="@id/number_popularity_detail"
                app:layout_constraintTop_toBottomOf="@id/text_detail_title" />

            <ViewFlipper
                android:id="@+id/flipper_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/text_detail_title">

                <ImageView
                    android:id="@+id/image_favorite_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:importantForAccessibility="no"
                    tools:srcCompat="@drawable/ic_favorite_checked" />

                <ProgressBar
                    android:layout_width="@dimen/_24dp"
                    android:layout_height="@dimen/_24dp"
                    android:layout_gravity="center" />
            </ViewFlipper>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <ViewFlipper
        android:id="@+id/flipper_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/_16dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <include layout="@layout/include_view_loading_state" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_movies_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8dp"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/_16dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_movies" />

        <include
            android:id="@+id/include_error_view"
            layout="@layout/include_error_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_no_results"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:alpha="0.5"
            android:padding="@dimen/_24dp"
            android:text="@string/common_no_results_found"
            android:textAlignment="center"
            android:textColor="@color/mrLightGrey"
            app:drawableTopCompat="@drawable/ic_neutral" />
    </ViewFlipper>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
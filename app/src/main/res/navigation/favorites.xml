<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/graph_favorites"
    app:startDestination="@id/favoritesFragment">

    <fragment
        android:id="@+id/favoritesFragment"
        android:name="com.marcos.moviesmr.presentation.favorites.FavoritesFragment"
        android:label="@string/favorites_screen_title"
        tools:layout="@layout/fragment_favorites" >
        <action
            android:id="@+id/action_favoritesFragment_to_detailFragment"
            app:destination="@id/detailFragment3" />
    </fragment>

    <fragment
        android:id="@+id/detailFragment3"
        android:name="com.marcos.moviesmr.presentation.detail.DetailFragment"
        android:label=""
        tools:layout="@layout/fragment_detail" >

        <argument
            android:name="screenTitle"
            app:argType="string" />

        <argument
            android:name="detailViewArgs"
            app:argType="com.marcos.moviesmr.presentation.detail.DetailViewArgs" />
    </fragment>
</navigation>